@model SurveyViewModel
@section Title {
    National Park Geek
}
<h2>Favorite Park Survey</h2>
<p>Please fill out the survey below by picking your favorite park that you've visited.</p>
<hr />

<form class="survey_form" asp-controller="Survey" asp-action="PostSurvey" method="post">
    <div class="form-group">
        <label asp-for="ParkCode">Favorite National Park</label>
        <select asp-for="ParkCode" asp-items="Model.ParkCodeList" name="ParkCode"></select>
        <span class="error" asp-validation-for="ParkCode"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email">Your Email</label>
        <input asp-for="Email" class="form-control" />
        <span class="error" asp-validation-for="Email"></span>
    </div>
    <div class="form-group">
        <label asp-for="State">State of Residence</label>
        <select asp-for="State" asp-items="Model.StateResidenceList" name="State"></select>
        <span class="error" asp-validation-for="State"></span>
    </div>
    <div class="form-group">
        <label asp-for="ActivityLevel">Activity Level</label>
        <div class="radio_options">
            <div class="option">
                <input asp-for="ActivityLevel" class="form-control radio" type="radio" value="Light" />
                <label asp-for="ActivityLevel">Light</label>
            </div>
            <div class="option">
                <input asp-for="ActivityLevel" class="form-control radio" type="radio" value="Medium" />
                <label asp-for="ActivityLevel">Medium</label>
            </div>
            <div class="option">
                <input asp-for="ActivityLevel" class="form-control radio" type="radio" value="Hard" />
                <label asp-for="ActivityLevel">Hard</label>
            </div>
            <div class="option">
                <input asp-for="ActivityLevel" class="form-control radio" type="radio" value="Xtreme" />
                <label asp-for="ActivityLevel">Xtreme</label>
            </div>
            <span class="error" asp-validation-for="ActivityLevel"></span>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

