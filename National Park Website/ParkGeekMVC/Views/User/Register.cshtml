@model RegisterViewModel

@section Title {
    Register
}

<form class="form_entry" asp-controller=" User" asp-action="Register" method="post">
    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" placeholder="First Name" class="form-control"/>
        <span class="error" asp-validation-for="FirstName"></span>
    </div>
    <div class="form-group">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" placeholder="Last Name" class="form-control"/>
        <span class="error" asp-validation-for="LastName"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" placeholder="Email" class="form-control"/>
        <span class="error" asp-validation-for="Email"></span>
    </div>
    <div class="form-group">
        <label asp-for="Username"></label>
        <input asp-for="Username" placeholder="Username" class="form-control"/>
        <span class="error" asp-validation-for="Username"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" placeholder="Password" type="password" class="form-control"/>
        <span class="error" asp-validation-for="Password"></span>
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword"></label>
        <input asp-for="ConfirmPassword" placeholder="Retype Password" type="password" class="form-control"/>
        <span class="error" asp-validation-for="ConfirmPassword"></span>
    </div>
    <button type="submit" class="btn btn-primary">Register</button>
    <div>
        @Html.ValidationMessage("invalid-user", new { @class = "error" })
    </div>
</form>
   